            android:text="Day 14"
            android:id="@+id/textViewday14"
            android:layout_below="@+id/textViewday13"
            android:layout_alignEnd="@+id/textViewday13"
            android:textSize="18dp"


            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 15"
            android:id="@+id/textViewday15"
