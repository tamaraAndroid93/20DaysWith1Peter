            />


    </RelativeLayout>
</LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/play_butt_width"
                android:background="#292929"
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/linear"
                android:layout_alignEnd="@+id/buttonHome"
                android:layout_alignStart="@+id/buttonHome">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >

                    <ImageView
                        android:layout_width="@dimen/play_butt_width"
                        android:layout_height="@dimen/play_butt_height"
                        android:id="@+id/imageViewBack"
                        android:src="@drawable/back"
                        android:layout_alignTop="@+id/imageViewSlow"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:layout_width="@dimen/play_butt_width"
                        android:layout_height="@dimen/play_butt_height"
                        android:id="@+id/imageViewSlow"
                        android:src="@drawable/slow"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageViewBack" />

                    <ImageView
                        android:layout_width="@dimen/play_butt_width"
                        android:layout_height="@dimen/play_butt_width"
                        android:id="@+id/imageViewPlay"
                        android:layout_toEndOf="@+id/imageViewSlow"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/play"

                        />

                    <ImageView
                        android:layout_width="@dimen/play_butt_width"
                        android:layout_height="@dimen/play_butt_height"
                        android:id="@+id/imageViewFast"
                        android:src="@drawable/fast"
                        android:layout_alignTop="@+id/imageViewSlow"
                        android:layout_toEndOf="@+id/imageViewPlay"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="@dimen/play_butt_width"
                        android:layout_height="@dimen/play_butt_height"
                        android:id="@+id/imageViewNext"
                        android:src="@drawable/next"
                        android:layout_alignTop="@+id/imageViewSlow"
                        android:layout_toEndOf="@+id/imageViewFast"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

