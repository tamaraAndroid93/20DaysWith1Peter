<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peter.tewntydayswith1peter.MainActivity"
    android:background="@drawable/pozadina"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:text="@string/title"
        android:textSize="27dp"
        android:textColor="@color/text_yellow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"

        android:id="@+id/relativeLayout">
        <TextView
            android:textColor="@color/text_yellow"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/previus_title"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/buttonHome"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/play_butt_width"
        android:textSize="22dp"
        android:background="@drawable/border"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="@dimen/subtitle_pading"
        android:layout_marginRight="@dimen/subtitle_pading"
        android:textColor="@color/text_yellow"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relativeLayout"
    android:id="@+id/linear"
    android:layout_alignLeft="@id/buttonHome"
    android:layout_alignRight="@id/buttonHome"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:background="@drawable/border"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonHome"
        android:layout_weight="1"
        >


        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 1"
            android:id="@+id/textViewDay1"
            android:textSize="18dp"


            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 2"
            android:id="@+id/textViewDay2"
            android:layout_below="@+id/textViewDay1"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 3"
            android:id="@+id/textViewDay3"
            android:layout_below="@+id/textViewDay2"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
             />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 4"
            android:id="@+id/textViewDay4"
            android:layout_below="@+id/textViewDay3"
            android:layout_alignEnd="@+id/textViewDay3"
            android:textSize="18dp"

            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 5"
            android:id="@+id/textViewDay5"
            android:layout_below="@+id/textViewDay4"
            android:layout_alignEnd="@+id/textViewDay4"
            android:textSize="18dp"

            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 6"
            android:id="@+id/textViewDay6"
            android:layout_below="@+id/textViewDay5"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"

            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 7"
            android:id="@+id/textViewday7"
            android:layout_below="@+id/textViewDay6"
            android:layout_alignEnd="@+id/textViewDay6"
            android:textSize="18dp"
            />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Day 8"
            android:id="@+id/textViewday8"
